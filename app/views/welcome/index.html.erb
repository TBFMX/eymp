<div id="overflow">
<div class="inner">
   <% contador = 0 %>
   <% @zone1.each do |zone| %>
   <% contador += 1 %>
   <div class="welcome_show_cuadro">
   <%if zone.image_id   
      @imagen = Image.find(zone.image_id)

