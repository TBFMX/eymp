<p id="notice"><%= notice %></p>

<!-- ---------------------------------------- Slider principal ----------------------------------------- -->

<div id="slider_principal">
   <!-- contenedor para informacion -->
   <div id="preview_contenido">
      <% 
         contador = 1
         arreglo = Array.new
         arreglo2 = Array.new
         @equipment_slider.each do |slider| 
      %>
      <div id="<%= "informacion" + contador.to_s %>">
         <!-- imagen de fondo -->
         <%if contador < 5 %>
            <% if slider.image_id   
               @imagen = Image.find(slider.image_id)
               unless @imagen.image_url.blank?
                  @image = @imagen.image_url
                  arreglo.push(@image)
               else
                  unless @imagen.photo.url(:small).blank?
                     @image = @imagen.photo.url(:small).to_s
                     arreglo.push(@image)
                  else 
                     @image ="/data/dummy.png"
                     arreglo.push(@image)    
                  end   
               end   
            else 
               @image ="/data/dummy.png"
               arreglo.push(@image)
            end %> 
         <% else %>
            <% if slider.image_id   
               @imagen = Image.find(slider.image_id)
               unless @imagen.image_url.blank?
                  @image = @imagen.image_url
                  arreglo.push(@image)
               else
                  unless @imagen.photo.url(:small).blank?
                     @image = @imagen.photo.url(:small).to_s
                     arreglo.push(@image)
                  else 
                     @image ="/data/dummy.png"
                     arreglo.push(@image)    
                  end   
               end
            else 
               @image ="/data/dummy.png"
               arreglo2.push(@image)
            end %> 
         <% end %> 

         <div id="slider_imagenes">
            <%= link_to image_tag(@image), equipment_path(slider), id: "image" + contador.to_s %>
         </div>
         <!-- franja negra -->
         <div id="detalles">
            <!-- parte del logo -->
               <div id="imagen"><img id="logo" src="/images/iconos/isotipo03.png"></div>
               <p id="titulo"><%= slider.name %></p>
               <span id="parrafo">
                  <strong>Marca:</strong><%= slider.brand.name %><br />
                  <strong>Modelo:</strong><%= slider.modelo %><br />
                  <strong>Año:</strong><%= slider.year %>
                  <p id="precio"><%= number_to_currency(slider.precio) %> <%= slider.currency.name %></p>
               </span>
         </div>            
      </div> 
         <% contador += 1 %> 
      <% end %>
   </div> 
   <!-- contenedor para los preview y controles-->
   <!-- for each para las 5 imagenes que se seleccionaran -->
   <% contador = 1 %> 
      <div id="preview_imagenes">
         <% arreglo.each do |ar| %>
             <a href="<%= "#informacion" + contador.to_s %>"><img id="<%= "image" + contador.to_s %>" src="<%= ar %>" /></a>
         <% contador += 1 %>
         <% end %>
      </div>
      <div id="preview_imagenes1">
         <% arreglo2.each do |ar| %>
             <a href="<%= "#informacion" + contador.to_s %>"><img id="<%= "image" + contador.to_s %>" src="<%= ar %>" /></a>
         <% contador += 1 %>
         <% end %>
      </div>     
</div>

